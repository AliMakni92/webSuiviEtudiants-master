{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h1>{{ 'change_password.submit'|trans }}
                <small>{{ app.user }}</small>
            </h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-offset-3 col-md-6">
        {{ form_start(form, { 'action': path('fos_user_change_password')}) }}
        {{ form_widget(form) }}
        <div>
            <button type="submit" class="btn btn-info">
                <i class="fa fa-key"></i> {{ 'change_password.submit'|trans }}
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>



