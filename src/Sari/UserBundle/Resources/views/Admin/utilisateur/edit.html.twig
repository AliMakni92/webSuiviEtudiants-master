{% extends 'SariAppBundle::Admin/layout.html.twig' %}

{% block title %} Edition {{ utilisateur.username }} Administration {% endblock %}

{% block contentheader %}
    <h1>
        Utilisateur
        <small>edition</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('admin_homepage') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li><a href="{{ path('admin_utilisateur_index') }}"><i class="fa fa-users"></i> Personne</a></li>
        <li><a href="{{ path('admin_utilisateur_show', {'id' : utilisateur.id}) }}">
                <i class="fa fa-user"></i> {{ utilisateur.username }}</a></li>
        <li class="active"><i class="fa fa-pencil"></i> Modification</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Formulaire d'edition</h3>
                </div>
                <div class="box-body">
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i> Editer</button>
                    {{ form_end(edit_form) }}

                </div><!-- /.box-body -->
            </div><!-- /.box -->

        </div>
    </div>
{% endblock %}