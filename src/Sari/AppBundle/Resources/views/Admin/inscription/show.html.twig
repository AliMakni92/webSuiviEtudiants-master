{% extends 'SariAppBundle::Admin/layout.html.twig' %}

{% block title %} Inscription {{ inscription.etudiant.personne.nom }}{% endblock %}

{% block contentheader %}
    <h1>
        Inscription
        <small>fiche information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('admin_homepage') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li><a href="{{ path('admin_inscription_index') }}"><i class="fa fa-university"></i> Inscription</a></li>
        <li class="active">Inscription {{ inscription.etudiant.personne.nom }}</li>
    </ol>
{% endblock %}

{% block content %}

    <!-- Default box -->

    <div class="row">
        <div class="col-md-12">

            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Informations</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Réduire">
                            <i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">

                    <p>id : {{ inscription.id }}</p>
                    <p>nom : {{ inscription.etudiant.personne.nom }}</p>
                    <p>Prénom : {{ inscription.etudiant.personne.prenom }}</p>
                    <p>Numéro INE : {{ inscription.etudiant.numIne }}</p>
                    <p>Formation :{{ inscription.formation.libelleCourt }}</p>
                    <p>Année d'inscription : {{ inscription.anneeInscription }}</p>
                    <p>Résultat : {{ inscription.resultat }}</p>



                    <div class="form-group">
                        <a class="btn btn-lg btn-success"
                           href="{{ path('admin_inscription_edit', { 'id': inscription.id }) }}"><i
                                    class="fa fa-pencil"></i> Edit</a>
                    </div>

                    {{ form_start(delete_form) }}
                    <div class="form-group">
                        <button onclick="return confirm('Êtes-vous sûr de vouloir supprimer l\'etablissement ?');"
                                type="submit"
                                class="btn btn-lg btn-danger" data-toggle="tooltip"
                                title="Supprimer l'inscription">
                            <i class="fa fa-trash"></i> Supprimer
                        </button>
                    </div>
                    {{ form_end(delete_form) }}

                </div><!-- /.box-body -->
                <div class="box-footer">
                    <div class="row">
                        <div class="col-lg-12">
                           {# <p>Ajouté le {{ inscription.createdAt|date("d/m/Y G:i") }}
                                {% if date(inscription.updatedAt) > date(inscription.createdAt) %}
                                    et mis à jour {{ inscription.updatedAt|ago }}
                                {% endif %}
                            </p>#}
                        </div>
                    </div>
                </div><!-- /.box-footer-->
            </div><!-- /.box -->
        </div>


    </div>
{% endblock %}
