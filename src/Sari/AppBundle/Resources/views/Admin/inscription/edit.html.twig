{% extends 'SariAppBundle::Admin/layout.html.twig' %}

{% block title %} Inscription {{ inscription.etudiant.personne.nom }} Administration {% endblock %}

{% block contentheader %}
    <h1>
        Inscription
        <small>edition</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('admin_homepage') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li><a href="{{ path('admin_inscription_index') }}"><i class="fa fa-university"></i> inscription</a></li>
        <li><a href="{{ path('admin_inscription_show', {'id' : inscription.id}) }}"><i
                        class="fa fa-university"></i> {{ inscription.etudiant.personne.nom }}</a></li>
        <li class="active"><i class="fa fa-pencil"></i> Modification</li>
    </ol>
{% endblock %}

{% block content %}
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Formulaire d'edition</h3>
        </div>
        <div class="box-body">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i> Editer</button>
            {{ form_end(edit_form) }}

        </div><!-- /.box-body -->
        <div class="box-footer">
            <div class="row">
                <div class="col-lg-12">
                    {#<p>Ajouté le {{ inscription.createdAt|date("d/m/Y G:i") }}
                        {% if date(inscription.updatedAt) > date(inscription.createdAt) %}
                            et mis à jour {{ inscription.updatedAt|ago }}
                        {% endif %}
                    </p>#}
                </div>
            </div>
        </div><!-- /.box-footer-->
    </div><!-- /.box -->
{% endblock %}