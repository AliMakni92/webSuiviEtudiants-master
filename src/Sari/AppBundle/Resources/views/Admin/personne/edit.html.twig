{% extends 'SariAppBundle::Admin/layout.html.twig' %}

{% block title %} Edition {{ personne.prenom}} {{ personne.nom }} Administration {% endblock %}

{% block contentheader %}
    <h1>
        Personne
        <small>edition</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('admin_homepage') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li><a href="{{ path('admin_personne_index') }}"><i class="fa fa-users"></i> Personne</a></li>
        <li><a href="{{ path('admin_personne_show', {'id' : personne.id}) }}"><i
                        class="fa fa-user"></i> {{ personne.prenom }} {{ personne.nom }}</a></li>
        <li class="active"><i class="fa fa-pencil"></i> Modification</li>
    </ol>
{% endblock %}

{% block content %}
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Formulaire d'edition</h3>
        </div>
        <div class="box-body">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i> Editer</button>
            {{ form_end(edit_form) }}

        </div><!-- /.box-body -->
        <div class="box-footer">
            <div class="row">
                <div class="col-lg-12">
                    <p>Ajouté le {{ personne.createdAt|date("d/m/Y G:i") }}
                        {% if date(personne.updatedAt) > date(personne.createdAt) %}
                            et mis à jour {{ personne.updatedAt|ago }}
                        {% endif %}
                    </p>
                </div>
            </div>
        </div><!-- /.box-footer-->
    </div><!-- /.box -->
{% endblock %}