{% extends 'SariAppBundle::Admin/layout.html.twig' %}

{% block title %} etudiant index{% endblock %}

{% block contentheader %}
    <h1>
        etudiant
        <small>index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('admin_homepage') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li class="active"><i class="fa fa-building"></i> etudiant</li>
    </ol>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        Liste des <span class="badge bg-blue">{{ etudiants.getTotalItemCount }}</span>
                        etudiants
                    </h3>
                    <div class="box-tools pull-right">
                        <a href="{{ path('admin_etudiant_new') }}" class="btn btn-box-tool" data-toggle="tooltip"
                           title="Ajouter etudiant">
                            <i class="fa fa-plus"></i></a>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>{{ knp_pagination_sortable(etudiants, 'Id', 'e.id') }}</th>
                            <th>Personne</th>
                            <th>numéro étudiant</th>
                            <th>Numero INE</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        {% for etudiant in etudiants %}
                            <tbody>
                            <tr>
                                <td>
                                    <a href="{{ path('admin_etudiant_show', { 'id': etudiant.id }) }}">{{ etudiant.id }}</a>
                                </td>
                                <td>
                                    <a href="{{ path('admin_personne_show', {'id' : etudiant.personne.id}) }}">{{ etudiant.personne.prenom }} {{ etudiant.personne.nom }}</a>
                                </td>
                                <td>{{ etudiant.numEtudiant }}</td>
                                <td>{{ etudiant.numIne }}</td>
                                <td>
                                    <a href="{{ path('admin_etudiant_show', { 'id': etudiant.id }) }}"
                                       class="btn btn-xs btn-primary" data-toggle="tooltip" data-placement="left"
                                       title="Voir {{ etudiant.personne.nom }}">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_etudiant_edit', { 'id': etudiant.id }) }}"
                                       class="btn btn-xs btn-success" data-toggle="tooltip" data-placement="left"
                                       title="Modifier {{ etudiant.personne.nom }}">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                            </tbody>
                        {% endfor %}
                    </table>
                </div><!-- /.box-body -->
                <div class="box-footer">
                    <div class="row">
                        <div class="col-lg-6">
                            {{ knp_pagination_render(etudiants) }}
                        </div>
                        <div class="col-lg-6">
                            <a href="{{ path('admin_etudiant_new') }}" class="btn btn-primary pull-right"><i
                                        class="fa fa-plus-circle"></i> Ajouter une nouvelle etudiant</a>
                        </div>
                    </div>
                </div><!-- /.box-footer-->
            </div><!-- /.box -->
        </div>
    </div>

{% endblock %}