{% extends 'SariAppBundle::Admin/layout.html.twig' %}

{% block title %} etudiant {% endblock %}

{% block contentheader %}
    <h1>
        Enteprise
        <small>fiche information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('admin_homepage') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li><a href="{{ path('admin_etudiant_index') }}"><i class="fa fa-building"></i> etudiant</a></li>
        <li class="active">{{ etudiant.personne.nom }} {{ etudiant.personne.prenom }}</li>
    </ol>
{% endblock %}

{% block content %}

    <!-- Default box -->

    <div class="row">
        <div class="col-md-12">

            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Informations</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Réduire">
                            <i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <p><strong>id :</strong> {{ etudiant.id }}</p>
                    <p><strong>Numéro étudiant :</strong> {{ etudiant.numEtudiant }}</p>
                    <p><strong>Numéro INE :</strong> {{ etudiant.numIne }}</p>
                    <p><strong>Personne :</strong> {{ etudiant.personne.prenom }} {{ etudiant.personne.nom }}
                    </p>
                    <p><strong>Etablissement :</strong> {{ etudiant.etablissement.nom }}</p>
                    

                    <div class="form-group">
                        <a class="btn btn-lg btn-success"
                           href="{{ path('admin_etudiant_edit', { 'id': etudiant.id }) }}"><i
                                    class="fa fa-pencil"></i> Edit</a>
                    </div>

                    {{ form_start(delete_form) }}
                    <div class="form-group">
                        <button onclick="return confirm('Êtes-vous sûr de vouloir supprimer le etudiant ?');"
                                type="submit"
                                class="btn btn-lg btn-danger" data-toggle="tooltip"
                                title="Supprimer la personne">
                            <i class="fa fa-trash"></i> Supprimer
                        </button>
                    </div>
                    {{ form_end(delete_form) }}

                </div><!-- /.box-body -->
                <div class="box-footer">
                    <div class="row">
                        <div class="col-lg-12">
                        </div>
                    </div>
                </div><!-- /.box-footer-->
            </div><!-- /.box -->
        </div>


    </div>
{% endblock %}
