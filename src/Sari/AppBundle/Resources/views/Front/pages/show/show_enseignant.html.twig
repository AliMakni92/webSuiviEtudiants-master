{% extends 'SariAppBundle::Front/layout.html.twig' %}

{%  block body %}
    {% block title %} professionnel {% endblock %}

    {% block contentheader %}
        <h1>
            enseignant
            <small>fiche information</small>
        </h1>
    {% endblock %}

    {% block content %}

        <!-- Default box -->
        {% if enseignant is not null %}
            <div class="row">
                <div class="col-md-12">

                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Informations</h3>
                            <div class="box-tools pull-right">
                                <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="RÃ©duire">
                                    <i class="fa fa-minus"></i></button>
                            </div>
                        </div>
                        <div class="box-body">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <th>Personne : </th> <td>{{ enseignant.personne.id }} {{ enseignant.personne.nom }} {{ enseignant.personne.prenom }}</td>
                                    </tr>

                                    <tr>
                                        <th>Poste </th> <td>{{ enseignant.statut }}</td>
                                    </tr>

                                    <tr>
                                        <th>Les Etablissements de l'enseignant : </th>
                                        {% for etablissement in enseignant.etablissements %}
                                            <tr>
                                                <td>{{ etablissement.nom }}</td>
                                            </tr>
                                            <tr>
                                                <td>{{ etablissement.adresse.adr }}, {{ etablissement.adresse.complement }}, {{ etablissement.adresse.ville }} ({{ etablissement.adresse.codePostal }}) {{ etablissement.adresse.pays }}</td>
                                            </tr>
                                        {% endfor %}
                                    </tr>

                                </tbody>

                            </table>

                            <div class="form-group">
                                <a class="btn btn-lg btn-success"
                                   href="{{ path('sari_edit_enseignant', { 'id': enseignant.id }) }}"><i
                                            class="fa fa-pencil"></i> Edit</a>
                            </div>







                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <div class="row">
                                <div class="col-lg-12">
                                </div>
                            </div>
                        </div><!-- /.box-footer-->
                    </div><!-- /.box -->
                </div>


            </div>
        {% else %}
            <a class="btn btn-primary" href="{{ path('sari_create_enseignant') }}">
                Je suis un enseignant
            </a>
        {% endif %}
    {% endblock %}
{% endblock %}
