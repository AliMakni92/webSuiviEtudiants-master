{% extends 'SariAppBundle::Front/layout.html.twig' %}

{% block body %}
    {% block title %} personne {% endblock %}

    {% block contentheader %}
        <h1>
            personne
            <small>fiche information</small>
        </h1>
    {% endblock %}

    {% block content %}

        <!-- Default box -->

        <div class="row">
            <div class="col-md-12">

                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Informations</h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Réduire">
                                <i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="table table-user-information">
                            <tbody>
                            <tr>
                                <th>Id :</th>
                                <td>{{ personne.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom :</th>
                                <td>{{ personne.nom }}</td>
                            </tr>
                            <tr>
                                <th>Prenom :</th>
                                <td>{{ personne.prenom }}</td>
                            </tr>
                            <tr>
                                <th>Sexe :</th>
                                <td>{{ personne.sexe }}</td>
                            </tr>
                            <tr>
                                <th>Date de Naissance :</th>
                                <td>{% if personne.datenaissance %}{{ personne.datenaissance|date('Y/m/d') }}{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Adresse :</th>
                                <td>{{ personne.adrPersonnel.adr }}</td>
                            </tr>
                            <tr>
                                <th>Complèment :</th>
                                <td>{{ personne.adrPersonnel.complement }}</td>
                            </tr>
                            <tr>
                                <th>Code postale :</th>
                                <td>{{ personne.adrPersonnel.codepostal }}</td>
                            </tr>
                            <tr>
                                <th>Ville :</th>
                                <td>{{ personne.adrPersonnel.ville }}</td>
                            </tr>
                            <tr>
                                <th>Pays :</th>
                                <td>{{ personne.adrPersonnel.pays }}</td>
                            </tr>
                            <tr>
                                <th>Téléphone Fixe :</th>
                                <td>{{ personne.adrPersonnel.telfixe }}</td>
                            </tr>
                            <tr>
                                <th>Téléphone Portable :</th>
                                <td>{{ personne.adrPersonnel.telport }}</td>
                            </tr>
                            </tbody>
                        </table>





                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-lg-12">
                            </div>
                        </div>
                    </div><!-- /.box-footer-->
                </div><!-- /.box -->
            </div>


        </div>
    {% endblock %}
{% endblock %}